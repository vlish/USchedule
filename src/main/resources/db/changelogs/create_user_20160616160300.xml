<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <property name="autoIncrement" value="true"/>
    <changeSet id="20160616160300" author="vlishch">
        <createTable tableName="user">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstname" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(25)">
                <constraints nullable="false" />
            </column>
            <column name="date_of_birth" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="login_attempt_count" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="locked" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(45)">
                <constraints unique="true"/>
            </column>
            <column name="phone" type="varchar(20)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="notification_type_id" type="bigint"/>
            <column name="schedule_view_type" type="bigint"/>
            <column name="image_id" type="bigint"/>
            <column name="application_role_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="user"
                baseColumnNames="image_id"
                constraintName="fk_image_id"
                referencedColumnNames="id"
                referencedTableName="image"/>
        <addForeignKeyConstraint
                baseTableName="user"
                baseColumnNames="application_role_id"
                constraintName="fk_app_role_id"
                referencedColumnNames="id"
                referencedTableName="application_role"/>
        <loadData encoding="UTF-8"
                  file="db/csv/superAdmin.csv"
                  separator=";"
                  tableName="user"/>
    </changeSet>
</databaseChangeLog>
